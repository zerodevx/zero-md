{
  "name": "zero-md",
  "version": "3.0.0-next.3",
  "description": "Ridiculously simple zero-config markdown displayer",
  "author": "Jason Lee <jason@zerodevx.com>",
  "scripts": {
    "dev": "vite -c vite.config.js src",
    "build": "npm run lint && vite build && terser -c -m --module dist/index.js > dist/index.min.js && npx publint",
    "preview": "vite preview",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint src/**/*.js",
    "test": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@types/node": "^20.11.27",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "terser": "^5.29.1",
    "vite": "^5.1.6"
  },
  "type": "module",
  "exports": {
    ".": "./src/lib/index.js",
    "./dist": "./dist/index.js"
  },
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "dist",
    "src/lib"
  ],
  "license": "ISC",
  "repository": "github:zerodevx/zero-md",
  "homepage": "https://zerodevx.github.io/zero-md/",
  "keywords": [
    "webcomponents",
    "customelements",
    "markdown-to-html",
    "marked",
    "highlightjs",
    "mathjax",
    "mermaid"
  ]
}
